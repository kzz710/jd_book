<div class="cart">
    <div class="w">
        @{
            List<CommodityViewModel> list=ViewBag.CommodityList;
            if (list==null)
            {
                <div class="no-shopping">
                    <i></i>
                    <div class="msg">您的购物车还没有商品</div>
                    <div class="action">
                        <a href="/jd_BookShop/index.html">马上去购物</a>
                        <a href="/Orders/Index">查看我的订单</a>
                    </div>
                </div>
            }
            else
            {            
                decimal totalPrice=0;
                <div class="have-shopping">
                    <h1>我的购物车</h1>
                    <form action="" id="orderForm">                     
                        <table>
                        <thead>
                            <tr>
                                <td>
                                    <input type="checkbox" class="totalCheckBox">全选</td>
                                <td>商品</td>
                                <td>单价(元)</td>
                                <td>数量</td>
                                <td>小计(元)</td>
                                <td>操作</td>
                            </tr>
                        </thead>
                        <tbody>
                           @foreach (CommodityViewModel bvm in list)
                           {
                               var book = bvm.book;
                               var dic=WebCommon.GetDirString(book.PublishDate);
                               dic="/jd_BookShop/htmlPage"+dic+book.Id+".html";
                               var imgSrc = "/jd_BookShop/image/BookCovers/" + book.ISBN + ".jpg";
                               var xiaoji=book.UnitPrice*bvm.count;
                               totalPrice += xiaoji;
                               var ckName = "ck_" + book.Id;
                               <tr>
                                   <td>
                                       <input type="checkbox" class="oneCheckBox" value="@book.Id" name="@ckName"></td>
                                   <td class="commodity">
                                       <a href="@dic">
                                           <img src="@imgSrc" alt="">
                                           <div class="title">@book.Title</div>
                                       </a>
                                   </td>
                                   <td class="onePrice">@book.UnitPrice.ToString("0.00")</td>
                                   <td>
                                       <a href="javascript:void (0)"  class="numBtn">-</a>
                                       <input type="text" value="@bvm.count" class="commodityCount">
                                       <a href="javascript:void (0)"  class="numBtn">+</a>
                                   </td>
                                   <td class="xiaoji">@xiaoji.ToString("0.00")</td>
                                   <td>
                                       <a href="javascript:void (0)" class="deleteBtn">删除</a>
                                   </td>
                               </tr>
                           }
                            
            
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="6">购物车总价：<span class="totalPrice">@totalPrice.ToString("0.00")</span>元
                                
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                    </form>
                    <button id="goBuy">购买</button>
                </div>
            }
        
       
        }
